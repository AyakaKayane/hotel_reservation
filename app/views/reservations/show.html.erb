<div class="container-fiuld user"> 
    <div class="row">
        <div class="col-md-12 user-view">
            <div class="user-view-box">
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="room">予約した部屋</label>
                        <div class="col-md-9"><%= link_to("#{@room.room_name}", "/rooms/show/#{@reservation.room_id}") %></div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="start">開始日</label>
                        <div class="col-md-9"><%= @reservation.start %></div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="finish">終了日</label>
                        <div class="col-md-9"><%= @reservation.finish %></div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="total_amount">価格</label>
                        <div class="col-md-9"><%= @reservation.total_amount %></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>